<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/mainbackground">

    <ImageView
            android:layout_width="162dp"
            android:layout_height="167dp" app:srcCompat="@drawable/vote_img2"
            android:id="@+id/loginImage"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="124dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="125dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/myID"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/myID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintTop_toBottomOf="@+id/idText"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/background_light"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/myPass" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" app:layout_constraintTop_toBottomOf="@+id/idPass"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="@android:color/background_light"/>
    <Button
            android:text="아이디 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findID" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:background="#00000000" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            app:layout_constraintTop_toBottomOf="@+id/myPass"/>
    <Button
            android:text="비밀번호 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findPass" android:textColor="@android:color/background_light"
            android:textStyle="bold" android:background="#00000000" android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/findID" app:layout_constraintTop_toBottomOf="@+id/myPass"
    />
    <Button
            android:text="로그인"
            android:layout_width="182dp"
            android:layout_height="41dp"
            android:id="@+id/loginBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="116dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="56dp"
            android:textColor="@android:color/background_light" android:background="#262424"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/findPass"
            app:layout_constraintVertical_bias="0.406" android:textSize="18sp" android:gravity="center"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regBtn"
            app:layout_constraintBottom_toBottomOf="@+id/findPass"
            android:textColor="@android:color/background_light"
            android:background="#00000000"
            android:textStyle="bold" android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toEndOf="@+id/findPass"
            android:layout_marginStart="4dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="12sp"/>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idText" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            android:layout_marginTop="388dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idPass" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:fontFamily="sans-serif-black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            app:layout_constraintTop_toBottomOf="@+id/myID"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/titlelogo4"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginTop="52dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/loginImage" app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>