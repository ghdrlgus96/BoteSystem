<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="전체선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_admin_input_allselect" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listview_admin_input_select" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="0.578"/>
    <ListView
            android:layout_width="396dp"
            android:layout_height="514dp"
            android:id="@+id/listview_admin_input_select" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.466" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" android:choiceMode="multipleChoice"
            app:layout_constraintVertical_bias="0.598" android:textFilterEnabled="true"/>
    <Button
            android:text="선택완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_admin_input_select" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listview_admin_input_select" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/button_admin_input_allselect" android:layout_marginStart="40dp"/>
    <Button
            android:text="취소"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_admin_input_finish" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/listview_admin_input_select" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.578"
            app:layout_constraintStart_toEndOf="@+id/button_admin_input_select" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_admin_input_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/listview_admin_input_select"
            app:layout_constraintVertical_bias="0.562" android:hint="이름으로 검색"/>
</android.support.constraint.ConstraintLayout>