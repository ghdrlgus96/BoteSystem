<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testButton"
            app:layout_constraintBaseline_toBaselineOf="@+id/testEdit"
            app:layout_constraintStart_toEndOf="@+id/testEdit" android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/testEdit"
            android:layout_marginTop="277dp" app:layout_constraintEnd_toStartOf="@+id/testButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/testText"
            app:layout_constraintStart_toStartOf="@+id/testEdit" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/testEdit" android:textSize="30sp"/>
</android.support.constraint.ConstraintLayout>