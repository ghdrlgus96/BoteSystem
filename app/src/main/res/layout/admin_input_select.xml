<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/shadow_175125">

    <TextView
            android:text="사용자이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_admin_input_item1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="전화번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_admin_input_item2"
            app:layout_constraintTop_toTopOf="@+id/textView_admin_input_item1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="@+id/textView_admin_input_item1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_admin_input_item3"
            app:layout_constraintVertical_bias="0.428"/>
    <TextView
            android:text="소속"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_admin_input_item3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_select"
            app:layout_constraintEnd_toEndOf="@+id/checkBox_select"/>
    <CheckBox
            android:text="선택"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox_select"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>