<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regIDText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/regIdButton"/>
    <TextView
            android:text="아이디"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regID" android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:textColor="#0000FF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
            android:layout_marginTop="86dp" app:layout_constraintTop_toBottomOf="@+id/regName"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regNameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="45dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="86dp"/>
    <TextView
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regName" android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:textColor="#0000FF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            android:layout_marginTop="86dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regPhoneText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/editText8"/>
    <TextView
            android:text="전화번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regPhone" android:fontFamily="sans-serif-black"
            android:textStyle="bold" android:textColor="#0000FF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/regPassFindAnswer"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/regClassText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/regPhoneText"/>
    <TextView
            android:text="소속"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regClass" android:fontFamily="sans-serif-black"
            android:textStyle="bold" android:textColor="#0000FF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/regPhone"/>
    <TextView
            android:text="비밀번호 찾기 질문"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regPassFindQuestion"
            android:fontFamily="sans-serif-black" android:textStyle="bold" android:textColor="#0000FF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="41dp"
            android:layout_marginTop="67dp" app:layout_constraintTop_toBottomOf="@+id/regPassCheck"/>
    <TextView
            android:text="비밀번호 찾기 답변"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regPassFindAnswer"
            android:fontFamily="sans-serif-black" android:textStyle="bold" android:textColor="#0000FF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="36dp"
            android:layout_marginTop="62dp" app:layout_constraintTop_toBottomOf="@+id/regPassFindQuestion"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText8" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" android:layout_marginTop="122dp"
            app:layout_constraintTop_toBottomOf="@+id/regPassCheckText"/>
    <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regNeedButton" android:textColor="#FFFFFF"
            android:textStyle="bold" android:fontFamily="sans-serif-black" android:background="#0000FF"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="163dp"/>
    <Button
            android:text="아이디 중복 확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regIdButton" android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:textColor="#FFFFFF" android:background="#0000FF"
            app:layout_constraintTop_toBottomOf="@+id/regNameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regPassText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="40dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/regIDText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/regPassCheckText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintTop_toBottomOf="@+id/regPassText"/>
    <TextView
            android:text="비밀번호"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regPass" android:fontFamily="sans-serif-black"
            android:textStyle="bold" android:textColor="#0000FF" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/regID"/>
    <TextView
            android:text="비밀번호 확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/regPassCheck" android:textStyle="bold"
            android:fontFamily="sans-serif-black" android:textColor="#0000FF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
            android:layout_marginTop="26dp" app:layout_constraintTop_toBottomOf="@+id/regPass"/>
</android.support.constraint.ConstraintLayout>