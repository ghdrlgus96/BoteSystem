<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#548093"
            app:popupTheme="@style/AppTheme.PopupOverlay" tools:ignore="MissingConstraints"/>

    <ListView
            android:id="@+id/admin_start"
            android:layout_width="409dp"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:dividerHeight="1.5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:ignore="MissingConstraints" app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="56dp"/>
</android.support.constraint.ConstraintLayout>